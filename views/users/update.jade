extends ../layout

block content
	h3 Update User
	form(role='form' method='post' action='/users/save/#{user.id}' )
		.form-group
			label(for='firstname') First Name
			input(type='text',value='#{user.firstname}',class='form-control',id='firstname',placeholder='First Name',name='firstname')
		.form-group
			label(for='lastname') Last Name
			input(type='text',value='#{user.lastname}',class='form-control',id='lastname',placeholder='Last Name',name='lastname')
		.form-group(style='display:none')
			label(for='password') Password
			input(type='password',value='#{user.password}',class='form-control',id='password',placeholder='Password',name='password')
		.form-group
			label(for='username') Username
			input(type='text',value='#{user.username}',class='form-control',id='username',placeholder='Username',name='username')
		.form-group
			label(for='phonenumber') Phonenumber
			input(type='text',value='#{user.phonenumber}',class='form-control',id='phonenumber',placeholder='Phonenumber',name='phonenumber')
		.form-group
			label(for='email') Email
			input(type='email',value='#{user.email}',class='form-control',id='email',placeholder='Email',name='email')

		<button type="submit" class="btn btn-primary">Submit</button>
		&nbsp;&nbsp;
		a(href='/users/list') Cancel